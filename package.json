{
  "name": "@crystal-ball/node-service-prototype",
  "version": "0.0.0",
  "description": "Prototypical Node.js service",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/node-service-prototype.git"
  },
  "keywords": [
    "prototype",
    "nodejs",
    "service"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "license": "ISC",
  "scripts": {
    "start": "node ./src/index.js",
    "start:dev": "nodemon --inspect --watch src",
    "migrate": "node-pg-migrate",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "JEST_COLLECT_COVERAGE=1 NODE_ENV=test jest",
    "test:watch": "jest --watch",
    "lint": "NODE_ENV=test eslint --format=pretty src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "dependencies": {
    "express": "4.17.1",
    "express-pino-logger": "4.0.0",
    "helmet": "3.18.0",
    "pg": "7.11.0",
    "pino": "5.12.6"
  },
  "devDependencies": {
    "@crystal-ball/commit-semantics": "1.2.0",
    "@crystal-ball/prettier-base": "1.1.0",
    "@types/jest": "24.0.13",
    "eslint-config-eloquence": "11.2.0",
    "husky": "2.4.0",
    "jest": "24.8.0",
    "node-pg-migrate": "3.21.1",
    "nodemon": "1.19.1",
    "pino-pretty": "3.1.0"
  },
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-adapter"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "prettier": "@crystal-ball/prettier-base"
}
