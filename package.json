{
  "name": "@crystal-ball/node-service-prototype",
  "version": "0.0.0",
  "description": "Prototypical Node.js service",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/node-service-prototype.git"
  },
  "keywords": [
    "prototype",
    "nodejs",
    "service"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "license": "ISC",
  "scripts": {
    "start": "node ./src/index.js",
    "start:dev": "nodemon --inspect --watch src",
    "migrate": "node-pg-migrate",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "NODE_ENV=test eslint --format=pretty src",
    "test:unit": "JEST_COLLECT_COVERAGE=1 NODE_ENV=test jest",
    "test:watch": "jest --watch",
    "format": "prettier --write '*.{js,json,md}' '**/*.{js,json,md}'"
  },
  "dependencies": {
    "express": "4.17.1",
    "express-pino-logger": "4.0.0",
    "helmet": "3.21.1",
    "pg": "7.12.1",
    "pino": "5.13.4"
  },
  "devDependencies": {
    "@crystal-ball/commit-semantics": "1.3.0",
    "@crystal-ball/prettier-base": "1.5.0",
    "@types/jest": "24.0.18",
    "eslint-config-eloquence": "12.4.0",
    "husky": "3.0.7",
    "jest": "24.9.0",
    "node-pg-migrate": "3.23.1",
    "nodemon": "1.19.3",
    "pino-pretty": "3.2.1"
  },
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-adapter"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "prettier": "@crystal-ball/prettier-base"
}
