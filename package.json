{
  "name": "@crystal-ball/node-service-prototype",
  "version": "0.0.0",
  "description": "Prototypical Node.js service",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/node-service-prototype.git"
  },
  "keywords": [
    "prototype",
    "nodejs",
    "service"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "license": "ISC",
  "engines": {
    "node": ">12.10"
  },
  "scripts": {
    "start": "docker-compose up",
    "stop": "docker-compose stop",
    "start:test": "docker-compose -f docker-compose.test.yml up",
    "stop:test": "docker-compose -f docker-compose.test.yml stop",
    "start:all": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "stop:all": "docker-compose -f docker-compose.yml -f docker-compose.test.yml stop",
    "migrate": "node-pg-migrate",
    "migrations:up": "node ./scripts/run-migrations.js",
    "test": "npm run test:lint && npm run test:unit && npm run test:acceptance",
    "test:lint": "NODE_ENV=test eslint --format=pretty scripts src test",
    "test:unit": "TEST_SUITE=unit JEST_COLLECT_COVERAGE=1 jest src",
    "test:acceptance": "TEST_SUITE=acceptance jest test",
    "test:watch": "NOTIFY=1 jest --watch src",
    "test:ci": "docker-compose -f docker-compose.test.yml -f docker-compose.tests-runner.yml run tests-runner",
    "stop:ci": "docker-compose -f docker-compose.test.yml -f docker-compose.tests-runner.yml stop",
    "format": "prettier --write '*.{js,json,md}' '**/*.{js,json,md,mdx,scss}'"
  },
  "dependencies": {
    "ajv": "6.11.0",
    "argon2": "0.25.1",
    "body-parser": "1.19.0",
    "cookie-parser": "1.4.4",
    "express": "4.17.1",
    "helmet": "3.21.2",
    "jsonwebtoken": "8.5.1",
    "nanoid": "2.1.9",
    "node-pg-migrate": "4.2.1",
    "pg": "7.17.1",
    "pino": "5.16.0",
    "pino-pretty": "3.5.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@crystal-ball/commitizen-base": "2.3.0",
    "@crystal-ball/prettier-base": "1.6.0",
    "@types/jest": "24.9.1",
    "eslint-config-eloquence": "12.19.0",
    "husky": "4.2.1",
    "jest": "24.9.0",
    "nodemon": "2.0.2",
    "supertest": "4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-base"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "prettier": "@crystal-ball/prettier-base"
}
